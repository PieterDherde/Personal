{
  "services": [
    {
      "name": "stash",
      "image": "stashapp/stash:v0.28.1",
      "environment": {
        "STASH_STASH": "/data/",
        "STASH_GENERATED": "/generated/",
        "STASH_METADATA": "/metadata/",
        "STASH_CACHE": "/cache/",
        "STASH_PORT": "9999"
      },
      "internalPort": 9999,
      "volumes": [
        {
          "hostPath": "/etc/localtime",
          "containerPath": "/etc/localtime",
          "readOnly": true,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "./config",
          "containerPath": "/root/.stash",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "./data",
          "containerPath": "/data",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "./metadata",
          "containerPath": "/metadata",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "./cache",
          "containerPath": "/cache",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "./blobs",
          "containerPath": "/blobs",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "./generated",
          "containerPath": "/generated",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "logging": {
        "driver": "json-file",
        "options": {
          "max-file": "10",
          "max-size": "2m"
        }
      }
    }
  ]
}
