{
  "services": [
    {
      "name": "stash",
      "image": "stashapp/stash:v0.28.1",
      "environment": {
        "STASH_STASH": "/data/",
        "STASH_GENERATED": "/generated/",
        "STASH_METADATA": "/metadata/",
        "STASH_CACHE": "/cache/",
        "STASH_PORT": "9999"
      },
      "internalPort": 9999,
      "volumes": [
        {
          "hostPath": "/etc/localtime",
          "containerPath": "/etc/localtime:ro"
        },
        {
          "hostPath": "${APP_DATA_DIR}/config",
          "containerPath": "/root/.stash"
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media/",
          "containerPath": "/data"
        },
        {
          "hostPath": "${APP_DATA_DIR}/metadata",
          "containerPath": "/metadata"
        },
        {
          "hostPath": "${APP_DATA_DIR}/cache",
          "containerPath": "/cache"
        },
        {
          "hostPath": "${APP_DATA_DIR}/blobs",
          "containerPath": "/blobs"
        },
        {
          "hostPath": "${APP_DATA_DIR}/generated",
          "containerPath": "/generated"
        }
      ],
      "extraLabels": {
        "traefik.http.routers.{{RUNTIPI_APP_ID}}.tls=true"
      }
    }
  ]
}
